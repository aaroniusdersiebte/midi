{
  "name": "midi-controller",
  "version": "1.0.0",
  "description": "MIDI Controller f√ºr Audio Mixing und Hotkeys",
  "main": "main.js",
  "scripts": {
    "setup": "node setup.js",
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build": "electron-builder",
    "postinstall": "node setup.js"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
