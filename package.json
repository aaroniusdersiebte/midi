    "sortablejs": "^1.15.6"
  },
  "build": {
    "appId": "com.yourcompany.midicontroller",
    "productName": "MIDI Controller",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
